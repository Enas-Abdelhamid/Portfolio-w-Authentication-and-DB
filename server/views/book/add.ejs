<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Add a Business Contact</h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameField"
                    placeholder="Enter the Business Contact Name"
                    name="contactname" required>
                </div>

                <div class="form-group">
                    <label for="numberField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberField"
                    placeholder="Enter the Business Contact Number"
                    name="contactnumber" required>
                </div>

                <div class="form-group">
                    <label for="emailaddressField">Contact Email Address</label>
                    <input type="text" class="form-control"
                    id="emailaddressField"
                    placeholder="Enter the Email Address"
                    name="emailaddress" required>
                </div>

               

               
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



